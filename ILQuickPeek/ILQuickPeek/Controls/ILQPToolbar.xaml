<UserControl x:Class="ILQuickPeek.Controls.ILQPToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ILQuickPeek.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="1366">
    <UserControl.Resources>
        <Image x:Key="OpenFileImage" Source="/Media/Toolbar Icons/OpenFileDialog.png" />
    </UserControl.Resources>
    <ToolBar Name="MainToolbar" >
        <Button x:Name="OpenFileButton" Content="{StaticResource OpenFileImage}" Height="25" VerticalAlignment="Top" Width="25" Click="OpenFileButton_Click" />
    </ToolBar>
</UserControl>
